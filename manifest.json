{
  "manifest_version": 3,
  "name": "Full-Page Web Notepad",
  "version": "1.1",
  "description": "Turn any website into a full-page notepad with manual save/load.",
  "permissions": ["scripting", "storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle Notepad"
  }
}